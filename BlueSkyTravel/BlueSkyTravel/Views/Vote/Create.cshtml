@model BlueSkyTravel.Models.Vote
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Vote</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="VoteChoice" /> @Html.DisplayNameFor(model => model.VoteChoice)
                </label>
            </div>

            <div class="form-group">
                <label asp-for="ForFunId" class="control-label"></label>
                <input asp-for="ForFunId" class="form-control" asp-items="ViewBag.ForFunId"></input>
            </div>
                     <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

