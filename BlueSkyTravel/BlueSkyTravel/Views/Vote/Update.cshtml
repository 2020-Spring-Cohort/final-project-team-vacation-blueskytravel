@model BlueSkyTravel.Models.Vote
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Update</h1>

<h4>Vote</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="VoteChoice" /> @Html.DisplayNameFor(model => model.VoteChoice)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="ForFunId" class="control-label"></label>
                <input type="hidden" asp-for="ForFunId" class="form-control" asp-items="ViewBag.ForFunId" />
                <span asp-validation-for="ForFunId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

