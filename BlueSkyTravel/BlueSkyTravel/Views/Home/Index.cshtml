@using Microsoft.AspNetCore.Identity
@using BlueSkyTravel.Areas.IdentityModel;

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@{
    ViewData["Title"] = "Blue Sky Travel Home";
}

@section slider{
<div id="myCarousel" class="carousel slide pointer-event" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class=""></li>
      <li data-target="#myCarousel" data-slide-to="1" class=""></li>
      <li data-target="#myCarousel" data-slide-to="2" class="active"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item">
          <img class="bd-placeholder-img" src="/img/BlueLagoon.jpg" alt="BlueLagoon">
        <div class="container">
          <div class="carousel-caption">
            <h1>Travel to Blue Lagoon!</h1>
            <p>Don't Just Wing It, and plan the perfect trip to the Blue Lagoon!</p>
            <p><a class="btn btn-lg btn-primary" asp-action="Register" asp-controller="Account" role="button">Sign up today</a></p>
          </div>
        </div>
      </div>
      <div class="carousel-item">
      <img class="bd-placeholder-img" src="/img/Interlaken.jpg" alt="Interlaken">
        <div class="container">
          <div class="carousel-caption">
            <h1>Travel to Interlaken</h1>
            <p>Don't Just Wing It, and plan the perfect trip to the Interlaken!</p>
            <p><a class="btn btn-lg btn-primary" asp-action="Register" asp-controller="Account" role="button">Learn more</a></p>
          </div>
        </div>
      </div>
      <div class="carousel-item active">
       <img class="bd-placeholder-img" src="/img/Plitvice.jpg" alt="PlitVice">
        <div class="container">
          <div class="carousel-caption">
              <h1>Check Out Plitvice</h1>
              <p>Don't Just Wing It, See the breathtaking views in Plitvice</p>
            <p><a class="btn btn-lg btn-primary" asp-action="Register" asp-controller="Account" role="button">Browse gallery</a></p>
          </div>
        </div>
      </div>
    </div>
    <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
}


@section jumbotron{ 
    <section class="jumbotron text-center">
        <div class="container">
            <h1>About Blue Sky Travel</h1>
            <p class="lead text-muted mt-4">
                Planning a vacation should be an exciting experience, but with all the distractions of modern life and the distance between family members, it can be tough to find time to coordinate together, and sometimes the burden of planning an itinerary all falls onto one person-- NOT fun! Blue Sky Travel wants to take that burden away and turn vacation planning into a pleasant experience for the whole party!
            </p>
            <p class="lead text-muted pb-4">
                Vacation is fun, planning one should be too. Don’t just wing it, let Blue Sky Travel help!
            </p>
            <p>
                <a class="btn btn-primary my-2" href="/Account/Register">Sign Up Today!</a>
                <a class="btn btn-secondary my-2" href="/Account/Login">Login Today!</a>
            </p>
        </div>
    </section>
}


@section services{
    <div id="services" class="container">
        @if (SignInManager.IsSignedIn(User))
        {
        <div class="row">
            <div class="col-lg-4 text-center item">
                <i class="fas fa-clipboard-list "></i>
            <h2>Add Itinerary</h2>
                <p><a class="btn btn-theme5" asp-action="Index" asp-controller="Itinerary" role="button">Start Today »</a></p>
            </div><!-- /.col-lg-4 -->
            <div class="col-lg-4 text-center item">
                <i class="fas fa-landmark "></i>
            <h2>Add Activities</h2>
                <p><a class="btn btn-theme5" asp-action="Index" asp-controller="Itinerary" role="button">Start Today »</a></p>
            </div><!-- /.col-lg-4 -->
            <div class="col-lg-4 text-center item">
                <i class="fas fa-vote-yea "></i>
            <h2>Vote on Activities</h2>
                <p><a class="btn btn-theme5" asp-action="Index" asp-controller="Itinerary" role="button">Start Today »</a></p>
            </div><!-- /.col-lg-4 -->
        </div>
        }
        else
        {
        <div class="row">
            <div class="col-lg-4 text-center item">
                <i class="fas fa-clipboard-list"></i>
                <h2>Add Itinerary</h2>
                <p><a class="btn btn-theme5" asp-action="Login" asp-controller="Account" role="button">Start Today »</a></p>
            </div><!-- /.col-lg-4 -->
            <div class="col-lg-4 text-center item">
                <i class="fas fa-landmark"></i>
                <h2>Add Activities</h2>
                <p><a class="btn btn-theme5" asp-action="Login" asp-controller="Account" role="button">Start Today »</a></p>
            </div><!-- /.col-lg-4 -->
            <div class="col-lg-4 text-center item">
                <i class="fas fa-vote-yea"></i>
            <h2>Vote on Activities</h2>
                <p><a class="btn btn-theme5" asp-action="Login" asp-controller="Account" role="button">Start Today »</a></p>
            </div><!-- /.col-lg-4 -->
        </div>
        }
    </div>
}




