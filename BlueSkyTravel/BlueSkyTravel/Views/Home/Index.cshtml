@using Microsoft.AspNetCore.Identity
@using BlueSkyTravel.Areas.IdentityModel;

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@{
    ViewData["Title"] = "Blue Sky Travel Home";
}

@section slider{
<div id="myCarousel" class="carousel slide pointer-event" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class=""></li>
      <li data-target="#myCarousel" data-slide-to="1" class=""></li>
      <li data-target="#myCarousel" data-slide-to="2" class="active"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item">
          <img class="bd-placeholder-img" src="/img/BlueLagoon.jpg" alt="BlueLagoon">
        <div class="container">
          <div class="carousel-caption text-left">
            <h1>Travel to Blue Lagoon!</h1>
            <p>Don't Just Wing It, and plan the perfect trip to the Blue Lagoon!</p>
            <p><a class="btn btn-lg btn-primary" asp-action="Register" asp-controller="Account" role="button">Sign up today</a></p>
          </div>
        </div>
      </div>
      <div class="carousel-item">
      <img class="bd-placeholder-img" src="/img/Interlaken.jpg" alt="Interlaken">
        <div class="container">
          <div class="carousel-caption">
            <h1>Travel to Interlaken</h1>
            <p>Don't Just Wing It, and plan the perfect trip to the Interlaken!</p>
            <p><a class="btn btn-lg btn-primary" asp-action="Register" asp-controller="Account" role="button">Learn more</a></p>
          </div>
        </div>
      </div>
      <div class="carousel-item active">
       <img class="bd-placeholder-img" src="/img/Plitvice.jpg" alt="PlitVice">
        <div class="container">
          <div class="carousel-caption text-right">
              <h1>Check Out Plitvice</h1>
              <p>Don't Just Wing It, See the breathtaking views in Plitvice</p>
            <p><a class="btn btn-lg btn-primary" asp-action="Register" asp-controller="Account" role="button">Browse gallery</a></p>
          </div>
        </div>
      </div>
    </div>
    <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
}



@section services{
    <div class="container">
        @if (SignInManager.IsSignedIn(User))
        {
        <div class="row">
            <div class="col-lg-4">
                <i class="far fa-clipboard-list"></i>
            <h2>Add Itinerary</h2>
                <p><a class="btn btn-secondary" asp-action="Index" asp-controller="Itinerary" role="button">Start Today »</a></p>
            </div><!-- /.col-lg-4 -->
            <div class="col-lg-4">
                <i class="fal fa-landmark-alt"></i>
            <h2>Add Activities</h2>
                <p><a class="btn btn-secondary" asp-action="Index" asp-controller="Itinerary" role="button">Start Today »</a></p>
            </div><!-- /.col-lg-4 -->
            <div class="col-lg-4">
                <i class="fal fa-vote-yea"></i>
            <h2>Vote on Activities</h2>
                <p><a class="btn btn-secondary" asp-action="Index" asp-controller="Itinerary" role="button">Start Today »</a></p>
            </div><!-- /.col-lg-4 -->
        </div>
        }
        else
        {
        <div class="row">
            <div class="col-lg-4">
            <i class="far fa-clipboard-list"></i>
            <h2>Add Itinerary</h2>
                <p><a class="btn btn-secondary" asp-action="Login" asp-controller="Account" role="button">Start Today »</a></p>
            </div><!-- /.col-lg-4 -->
            <div class="col-lg-4">
               <i class="fal fa-landmark-alt"></i>
            <h2>Add Activities</h2>
                <p><a class="btn btn-secondary" asp-action="Login" asp-controller="Account" role="button">Start Today »</a></p>
            </div><!-- /.col-lg-4 -->
            <div class="col-lg-4">
        <i class="fal fa-vote-yea"></i>
            <h2>Vote on Activities</h2>
                <p><a class="btn btn-secondary" asp-action="Login" asp-controller="Account" role="button">Start Today »</a></p>
            </div><!-- /.col-lg-4 -->
        </div>
        }
    </div>
}




