@model BlueSkyTravel.Models.Flight
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Add A Flight";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}



<div class="card bg-light mx-auto">
    <article class="card-body mx-auto">
        <h4 class="card-title mt-3 text-center">Add a Flight</h4>
        <p class="text-center">Adventure Awaits!</p>

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- form-group// -->
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fas fa-plane"></i></span>
                </div>
                <input asp-for="AirlineName" class="form-control" placeholder="Airline Name" type="text">
                <span asp-validation-for="AirlineName" class="text-danger"></span>
            </div>

            <!-- form-group// -->
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-sort-numeric-up"></i></span>
                </div>
                <input asp-for="FlightNumber" class="form-control" placeholder="Flight Number" type="text">
                <span asp-validation-for="FlightNumber" class="text-danger"></span>
            </div>

            <!-- form-group// -->
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fas fa-calendar-alt"></i> </span>
                </div>
                <input asp-for="ArrivalDate" class="form-control" placeholder="Arrival" type="datetime-local">
                <br />
                <span asp-validation-for="ArrivalDate" class="text-danger"></span>
            </div>


            <!-- form-group// -->
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fas fa-calendar-alt"></i> </span>
                </div>
                <input asp-for="DepartureDate" class="form-control" placeholder="Departure" type="datetime-local">
                <br />
                <span asp-validation-for="DepartureDate" class="text-danger"></span>
            </div>


            <!-- form-group end.// -->
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fas fa-dollar-sign"></i></span>
                </div>
                <input asp-for="Fare" class="form-control" placeholder="Total Airfare" type="text">
                <br />
                <span asp-validation-for="Fare" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="ItineraryId" type="hidden" value="@ViewBag.ItineraryId" class="form-control" asp-items="ViewBag.ItineraryId" />
            </div>

            <!-- form-group// -->
            <div class="form-group">
                <button type="submit" value="Create" class="btn btn-primary btn-block"> Add Flight  </button>
            </div>



            <!-- form-group// -->
            <a asp-controller="Itinerary" asp-action="Details" asp-route-id="@ViewBag.ItineraryId">Back to Itinerary</a>
        </form>
    </article>
</div>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
